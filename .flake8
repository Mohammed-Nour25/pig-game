[flake8]
max-line-length = 120
extend-ignore =
    E203,
    E501,
    W503,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107,
    D200,
    D205,
    D209,
    D400
exclude = .git,__pycache__,venv,.venv,build,dist,doc/api,htmlcov
per-file-ignores =
    tests/*: D100,D101,D102,D103,F401,F841
